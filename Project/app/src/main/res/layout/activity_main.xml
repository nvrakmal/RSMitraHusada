<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_margin="0dp"
            android:background="#00AEF0"
            android:gravity="top|left"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="18dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:text="RS MITRA HUSADA"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="Kesehatan Anda Kepedulian Kami"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>



        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_margin="0dp"
            android:background="#00AEF0"
            android:gravity="top"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/header"
            tools:layout_editor_absoluteX="-15dp">
                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/view_pager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/navigasi_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
            tools:layout_editor_absoluteX="-32dp">

            <LinearLayout
                android:id="@+id/layout_layanan"
                android:layout_width="180dp"
                android:layout_height="140dp"
                android:layout_margin="0dp"
                android:background="#04A1DC"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center_horizontal"
                android:onClick="Layanan"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="80dp"
                    android:layout_margin="0dp"
                    android:src="@drawable/ambulance" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="Layanan Darurat 24 Jam"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/layout_dokter"
                android:layout_width="180dp"
                android:layout_height="140dp"
                android:layout_margin="0dp"
                android:background="#00AEF0"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center_horizontal"
                android:onClick="Dokter"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="80dp"
                    android:layout_margin="0dp"
                    android:src="@drawable/doctor" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="Dokter Berpengalaman"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/navigasi_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/navigasi_1"
            tools:layout_editor_absoluteX="12dp">

            <LinearLayout
                android:id="@+id/layout_sarana"
                android:layout_width="180dp"
                android:layout_height="140dp"
                android:layout_margin="0dp"
                android:background="#00AEF0"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center_horizontal"
                android:onClick="Sarana"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="80dp"
                    android:layout_margin="0dp"
                    android:src="@drawable/building" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="Sarana dan Fasilitas"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/layout_lokasi"
                android:layout_width="180dp"
                android:layout_height="140dp"
                android:layout_margin="0dp"
                android:background="#04A1DC"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center_horizontal"
                android:onClick="Lokasi"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="80dp"
                    android:layout_margin="0dp"
                    android:src="@drawable/location" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="Lokasi Strategis"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#161616"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:onClick="Email"
            android:foreground="?android:attr/selectableItemBackground"
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="0dp"
            android:gravity="left|center"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:paddingLeft="20dp"
                android:gravity="left|center"
                android:src="@drawable/ic_email" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|center"
                android:paddingLeft="10dp"
                android:text="Email"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|center"
                android:paddingLeft="10dp"
                android:text="cs@mitrahusadapringsewu.com"
                android:textColor="@color/white"
                android:textSize="14sp"/>
        </LinearLayout>

            <LinearLayout
                android:onClick="Phone"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingBottom="10dp"
                android:layout_margin="0dp"
                android:gravity="left|center"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:paddingLeft="20dp"
                    android:gravity="left|center"
                    android:src="@drawable/ic_call" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:paddingLeft="10dp"
                    android:text="Customer Care"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:paddingLeft="10dp"
                    android:text="+62 82281666655"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </LinearLayout>


        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>